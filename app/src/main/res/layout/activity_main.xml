<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:id="@+id/main_design">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="HIRISPORA SECURITY"
        android:id="@+id/title_line_1"
        android:layout_weight="0.08"
        android:textSize="30dp"
        android:paddingTop="35dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="INTERCOM"
        android:id="@+id/title_line_2"
        android:textSize="30dp"
        android:paddingTop="0dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:layout_below="@+id/title_line_1"
        android:layout_centerHorizontal="true" />

    <EditText android:id="@+id/block"
        android:width="135dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Block"
        android:inputType="number"
        android:layout_weight="0.11"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textSize="50dp"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/title_line_2"
        android:layout_alignStart="@id/title_line_1"
        android:maxLength="2"/>

    <EditText android:id="@+id/flat"
        android:width="125dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint=" Flat"
        android:inputType="number"
        android:layout_weight="0.11"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textSize="50dp"
        android:layout_alignEnd="@+id/title_line_1"
        android:maxLength="4"
        android:layout_alignTop="@+id/block" />

    <Button android:id="@+id/makeCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call"
        android:layout_weight="0.19"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="49dp"
        android:height="100dp"
        android:textSize="50dp"
        android:layout_below="@+id/block"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <TextView android:id="@+id/display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/makeCall"
        android:layout_alignEnd="@+id/title_line_1"
        android:layout_alignStart="@+id/title_line_1" />


</RelativeLayout>


